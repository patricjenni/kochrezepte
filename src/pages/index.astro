---
import MySiteLayout from "../layouts/SiteLayout.astro";
import zueriGeschnetzeltesImage from "../assets/zürigeschnetzeltes_200.jpg";
import buendnerGerstensuppeImage from "../assets/buendner-gerstensuppe.png";
import ratatouilleImage from "../assets/ratatouille.png";
import kartoffelgratinImage from "../assets/kartoffelgratin.jpg";
import { joinUrl } from "../utils/url";

const baseUrl = import.meta.env.BASE_URL;
const zuerigeschnetzeltesUrl = joinUrl(baseUrl, "rezepte/zuerigeschnetzeltes/");
const buendnerGerstensuppeUrl = joinUrl(baseUrl, "rezepte/buendnergerstensuppe/");
const kartoffelgratinUrl = joinUrl(baseUrl, "rezepte/kartoffelgratin/");
const ratatouilleUrl = joinUrl(baseUrl, "rezepte/ratatouille/");
---

<MySiteLayout title="Kochrezepte für Entwickler">
  <!-- Content Container -->
  <div class="container">
    <!-- Introduction Section -->
    <div class="columns is-centered mb-6">
      <div class="column is-8-desktop is-10-tablet">
        <div class="content">
          <p>
            Diese Kochrezepte sind speziell für Entwickler gedacht: klar
            strukturiert, logisch aufgebaut und ohne unnötiges Blabla. Jedes
            Rezept folgt derselben Systematik – schnell erfassbar, effizient
            umsetzbar und genau das Richtige, wenn man nach einem Tag Debugging
            etwas braucht, das einfach funktioniert.
          </p>
        </div>
      </div>
    </div>

    <!-- Recipe Cards Grid -->
    <div class="columns is-multiline is-centered">
      <!-- Zürigeschnetzeltes Card -->
      <div class="column is-half-tablet is-one-third-desktop">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <img
                src={zueriGeschnetzeltesImage.src}
                alt="Zürigeschnetzeltes mit Rösti"
              />
            </figure>
          </div>
          <header class="card-header">
            <p class="card-header-title">Zürigeschnetzeltes mit Rösti</p>
          </header>
          <div class="card-content">
            <div class="content">
              Das Rezept der Rezepte.
              <br />
              <time datetime="2025-12-10">11:09 PM - 10 Dec 2025</time>
            </div>
          </div>
          <footer class="card-footer">
            <a href={zuerigeschnetzeltesUrl} class="card-footer-item"
              >Zum Rezept...</a
            >
          </footer>
        </div>
      </div>

      <!-- Bündner Gerstensuppe Card -->
      <div class="column is-half-tablet is-one-third-desktop">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <img
                src={buendnerGerstensuppeImage.src}
                alt="Bündner Gerstensuppe"
                style="object-fit: cover;"
              />
            </figure>
          </div>
          <header class="card-header">
            <p class="card-header-title">Bündner Gerstensuppe</p>
          </header>
          <div class="card-content">
            <div class="content">
              Stärkende Suppe.
              <br />
              <time datetime="2025-12-20">14:30 PM - 20 Dec 2025</time>
            </div>
          </div>
          <footer class="card-footer">
            <a href={buendnerGerstensuppeUrl} class="card-footer-item"
              >Zum Rezept...</a
            >
          </footer>
        </div>
      </div>

      <!-- Ratatouille Card -->
      <div class="column is-half-tablet is-one-third-desktop">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <img
                src={ratatouilleImage.src}
                alt="Ratatouille"
              />
            </figure>
          </div>
          <header class="card-header">
            <p class="card-header-title">Ratatouille</p>
          </header>
          <div class="card-content">
            <div class="content">
              Das Rezept zum Film Ratatouille.
              <br />
              <time datetime="2025-12-10">08:22 PM - 18 Jan 2026</time>
            </div>
          </div>
          <footer class="card-footer">
            <a href={ratatouilleUrl} class="card-footer-item"
              >Zum Rezept...</a
            >
          </footer>
        </div>
      </div>

      <!-- Placeholder Card 4 -->
      <div class="column is-half-tablet is-one-third-desktop">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <img
                src={kartoffelgratinImage.src}
                alt="Kartoffelgratin"
              />
            </figure>
          </div>
          <header class="card-header">
            <p class="card-header-title">Kartoffelgratin</p>
          </header>
          <div class="card-content">
            <div class="content">
              Simple Zubereitung
              <br />
              <time datetime="2025-12-10">09:09 AM - 17 Jan 2026</time>
            </div>
          </div>
          <footer class="card-footer">
            <a href={kartoffelgratinUrl} class="card-footer-item"
              >Zum Rezept...</a
            >
          </footer>
        </div>
      </div>
    </div>
  </div>
</MySiteLayout>
